      <div class='FondoDropdown'>
      
        <div class="dropdown" style="float:left;">
  <button class="dropbtn">Control de Audio</button>
  <div class="dropdown-content" style="left:0;">
  <label>Activar Voz</label>
            <button id="activarVoz" type="button" onclick="activarVoz()">Activar Voz</button>
            <br>
            <label>Selecciona la voz</label> <br>
            <select id="voice"></select>
            <label for="volume">Volumen</label>
		        <input type="range" min="0" max="5" step="0.5" name="volume" id="volume" value="1">
            <div class="option">
              <label for="rate">Velocidad</label>
              <input type="range" min="1" max="10" step="1" name="rate" id="rate" value="1">
            </div>
            <div class="option">
              <label for="pitch">Pitch</label>
              <input type="range" min="0" max="2" step="0.5" name="pitch" id="pitch" value="1">
            </div>
  </div>
</div>

<div class="dropdown" id="botonUsuario" style="float:right;">
  <button class="dropbtn" >Bienvenid@ <p id="nombreButton"><%=nombre%></p></button>
  <div class="dropdown-content" disabled="disabled">
      <a id="link1" href="/login">Inicia sesion</a>
      <a id="link2">Sobre nosotros</a>
      <a id="link3" >Redes sociales</a>
      
  </div>
</div>
</div>

</nav>
        
